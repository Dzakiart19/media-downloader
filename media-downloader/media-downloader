#!/bin/bash

# Get the directory where the script is located
# This ensures that all relative paths work correctly, regardless of where the script is called from
SCRIPT_DIR=$(cd -- "$(dirname -- "${BASH_SOURCE[0]}")" &> /dev/null && pwd)

# Path to the main Python script
PYTHON_SCRIPT="$SCRIPT_DIR/media_downloader.py"

# Check if the main Python script exists
if [ ! -f "$PYTHON_SCRIPT" ]; then
    echo "Error: Main script 'media_downloader.py' not found in $SCRIPT_DIR"
    exit 1
fi

# Run the Python script
# All command-line arguments passed to this launcher will be forwarded to the Python script
python "$PYTHON_SCRIPT" "$@"
